def apresentar_jogador(nome):
    # FunÃ§Ã£o para apresentar o jogador
    print(f"\nBem-vinda ao reino, {nome}! Sua jornada comeÃ§a agora.\n")


def escolher_personagem():
    # FunÃ§Ã£o para escolher personagem
    print("Escolha seu personagem:")
    print("1 - Arqueira Luna")
    print("2 - Mago Orion")
    print("3 - Guerreiro Kael")

    escolha = input("Digite 1, 2 ou 3: ")

    if escolha == "1":
        return "Arqueira Luna"
    elif escolha == "2":
        return "Mago Orion"
    elif escolha == "3":
        return "Guerreiro Kael"
    else:
        print("OpÃ§Ã£o invÃ¡lida! VocÃª serÃ¡ Kael por padrÃ£o.")
        return "Guerreiro Kael"


def missao_poder(personagem):
    # MissÃ£o que usa If/Elif/Else
    print(f"\nAgora, {personagem}, escolha seu poder inicial:")
    print("5 - Chama Branca")
    print("3 - Gelo Sombrio")
    print("8 - Luz Divina")
    print("7 - Tempestade Azul")

    poder = int(input("Escolha um poder (5,3,8,7): "))

    if poder == 5:
        print("ğŸ”¥ VocÃª escolheu Chama Branca! Forte, mas instÃ¡vel.")
    elif poder == 3:
        print("â„ï¸ VocÃª escolheu Gelo Sombrio! Fraco, mas inteligente.")
    elif poder == 8:
        print("âœ¨ Luz Divina! O mais raro de todos!")
    elif poder == 7:
        print("âš¡ Tempestade Azul! Um poder equilibrado.")
    else:
        print("Poder invÃ¡lido, vocÃª ficou com 5 por padrÃ£o!")
        poder = 5

    return poder


def batalha_medusa(personagem, poder):
    # FunÃ§Ã£o com IF + ELIF + ELSE
    print("\nâš ï¸ Medusa apareceu! Prepare-se para lutar!")
    print("Ela tem poder 6.\n")

    if poder > 6:
        print(f"ğŸ‰ ParabÃ©ns, {personagem}! VocÃª derrotou Medusa!")
    elif poder == 6:
        print(f"ğŸ˜¬ {personagem}, foi quase... vocÃªs empataram!")
    else:
        print(f"ğŸ’€ VocÃª perdeu, {personagem}... tente outra vez.")


def repetir_frases():
    # FunÃ§Ã£o com FOR
    print("\nVamos treinar seu grito de guerra!")
    frase = input("Digite seu grito de guerra: ")

    print("\nRepetindo 3 vezes para treinar:")
    for x in range(3):
        print(f"{x+1} - {frase}")


def porta_final():
    # FunÃ§Ã£o com WHILE
    print("\nVocÃª chegou Ã  porta final do castelo.")
    print("Ela sÃ³ abre se vocÃª digitar a palavra secreta: 'luz'")

    resposta = ""  # comeÃ§a vazia

    while resposta != "luz":
        resposta = input("Digite a palavra secreta: ")

        if resposta != "luz":
            print("âŒ Palavra errada! Tente de novo...")

    print("âœ¨ A porta abriu! VocÃª venceu o jogo!\n")


# ===============================
